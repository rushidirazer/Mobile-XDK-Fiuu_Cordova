<?xml version='1.0' encoding='utf-8'?>

<plugin id="fiuuxdk-cordova-plugin" version="4.0.0"
  xmlns="http://apache.org/cordova/ns/plugins/1.0"
  xmlns:android="http://schemas.android.com/apk/res/android">
  <name>XdkFiuuCordova</name>

  <!-- Make a global window.XdkFiuuCordova -->
  <js-module src="www/XdkFiuuCordova.js" name="XdkFiuuCordova">
    <clobbers target="XdkFiuuCordova" />
  </js-module>

  <platform name="android">
    <!-- Register the plugin class as a Cordova feature -->
    <config-file target="res/xml/config.xml" parent="/*">
      <feature name="XdkFiuuCordova">
        <param name="android-package" value="com.fiuu.cordova.XdkFiuuCordova" />
        <param name="onload" value="false" />
      </feature>
    </config-file>

    <edit-config file="app/src/main/AndroidManifest.xml" mode="merge" target="/manifest">
      <manifest xmlns:tools="http://schemas.android.com/tools" />
    </edit-config>


    <resource-file src="src/android/proguard-fiuu.pro" target="app/proguard-fiuu.pro" />
    <resource-file src="src/android/res/values/fiuu-themes.xml" target="res/values/fiuu-themes.xml" />
    <resource-file src="src/android/res/values/fiuu-colors.xml" target="res/values/fiuu-colors.xml" />

    
    <!-- Drop our rules file into the app module -->
    <!-- Append its contents into the main proguard-rules.pro -->
    <config-file target="app/proguard-rules.pro" parent="/*">
      <![CDATA[
# --- BEGIN: Fiuu/MOLPay extra rules ---
-include proguard-fiuu.pro
# --- END: Fiuu/MOLPay extra rules ---
    ]]>
    </config-file>

    <!-- Add/merge into release buildType to guarantee minify + rules files -->
    <config-file target="app/build.gradle" parent="/android/buildTypes/release">
      <![CDATA[
        minifyEnabled true
        shrinkResources true
        proguardFiles getDefaultProguardFile('proguard-android-optimize.txt'),
                      'proguard-rules.pro'
    ]]>
    </config-file>

    <framework src="androidx.appcompat:appcompat:1.6.1" />
    <!-- Material often used by payment screens -->
    <framework src="com.google.android.material:material:1.9.0" />
    <framework src="src/android/build-extras.gradle" custom="true" type="gradleReference" />


    <!-- Your Java file -->
    <source-file src="src/android/XdkFiuuCordova.java" target-dir="src/com/fiuu/cordova" />

    <config-file target="AndroidManifest.xml" parent="/manifest/application">
      <activity android:name="com.molpay.molpayxdk.MOLPayActivity" android:theme="@style/Theme.FiuuXdk.Light"/>
      <activity android:name="com.molpay.molpayxdk.googlepay.WebActivity" android:theme="@style/Theme.FiuuXdk.Light"/>
      <activity android:name="com.molpay.molpayxdk.googlepay.ActivityGP" android:theme="@style/Theme.FiuuXdk.Light"/>
      <meta-data android:name="com.google.android.gms.wallet.api.enabled" android:value="true" />
    </config-file>
  </platform>
</plugin>
